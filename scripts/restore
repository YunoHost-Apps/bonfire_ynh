#!/bin/bash

source /usr/share/yunohost/helpers

#=================================================
# RESTORE THE APP MAIN DIR
#=================================================
ynh_script_progression "Restoring the app main directory..."

ynh_restore "$install_dir"

# Restore environment files permissions
if [ -f "$install_dir/.env" ]; then
    chmod 400 "$install_dir/.env"
    chown $app:$app "$install_dir/.env"
fi

# Create Meilisearch env file with secrets (not backed up, recreate from settings)
meili_master_key=$(ynh_app_setting_get --key=meili_master_key)
ynh_config_add --template="meilisearch.env" --destination="$install_dir/.meilisearch.env"

chown -R $app:www-data "$install_dir"

#=================================================
# RESTORE THE DATA DIR
#=================================================
ynh_script_progression "Restoring the data directory..."

ynh_restore "$data_dir"

chown -R $app:www-data "$data_dir"

#=================================================
# RESTORE THE POSTGRESQL DATABASE
#=================================================
ynh_script_progression "Restoring the PostgreSQL database..."

# Enable PostGIS extension before restoring database (needed for spatial data)
ynh_psql_db_shell <<< "CREATE EXTENSION IF NOT EXISTS citext;"

ynh_psql_db_shell <<< "CREATE EXTENSION IF NOT EXISTS postgis;"

ynh_psql_db_shell < ./db.sql

#=================================================
# RESTORE SYSTEM CONFIGURATIONS
#=================================================
ynh_script_progression "Restoring system configurations related to $app..."

ynh_restore "/etc/nginx/conf.d/$domain.d/$app.conf"

ynh_restore "/etc/systemd/system/$app.service"
systemctl enable $app.service --quiet

ynh_restore "/etc/systemd/system/meilisearch-$app.service"
systemctl enable "meilisearch-$app.service" --quiet

mkdir -p "/var/log/$app"
chown -R $app:$app "/var/log/$app"

# Restore logrotate configuration if it exists
if [ -f "./etc/logrotate.d/$app" ]; then
    ynh_restore "/etc/logrotate.d/$app"
fi

yunohost service add "meilisearch-$app" --description="Meilisearch for Bonfire" --log="/var/log/$app/meilisearch.log"
yunohost service add $app --description="Bonfire daemon" --log="/var/log/$app/$app.log"

#=================================================
# RELOAD NGINX AND START SERVICES
#=================================================
ynh_script_progression "Reloading NGINX web server and starting services..."

ynh_systemctl --service="meilisearch-$app" --action="start" --log_path="/var/log/$app/meilisearch.log"
ynh_systemctl --service=$app --action="start"

ynh_systemctl --service=nginx --action=reload

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression "Restoration completed for $app"
